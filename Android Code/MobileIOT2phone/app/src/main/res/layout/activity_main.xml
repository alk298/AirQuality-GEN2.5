<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wayne_mac.mobileiot2phone.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="98dp"
                android:layout_height="85dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="#00AAFF"
                android:scaleType="fitXY"
                android:src="@drawable/time2" />

            <TextView
                android:id="@+id/Time"
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="Time"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="96dp"
                android:layout_height="87dp"
                android:layout_marginBottom="5dp"
                android:background="#00AAFF"
                android:scaleType="fitXY"
                android:src="@drawable/location1" />

            <TextView
                android:id="@+id/LocationValue"
                android:layout_width="252dp"
                android:layout_height="87dp"
                android:layout_marginLeft="10dp"
                android:background="#AACC00"
                android:text="Location"
                android:textAlignment="center"
                android:textColor="#0000FF"
                android:textSize="45sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:layout_marginBottom="5dp"
                android:background="#00AAFF"
                android:scaleType="fitXY"
                android:src="@drawable/temperature2" />

            <TextView
                android:id="@+id/Tempeature"
                android:layout_width="wrap_content"
                android:layout_height="84dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#EEEE00"
                android:text="Tempeature"
                android:textAlignment="center"
                android:textColor="#0000FF"
                android:textSize="55sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:background="#00AAFF"
                android:scaleType="fitXY"
                android:src="@drawable/humidity3" />

            <TextView
                android:id="@+id/Humidity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#00FF33"
                android:text="Humidity"
                android:textAlignment="center"
                android:textColor="#0000FF"
                android:textSize="55sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewPM251"
                android:layout_width="98dp"
                android:layout_height="79dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#00AAFF"
                android:scaleType="fitXY"
                android:src="@drawable/pm252" />

            <TextView
                android:id="@+id/PM251"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#FFFF55"
                android:text="PM2.5"
                android:textAlignment="center"
                android:textColor="#0000FF"
                android:textSize="55sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PM251unit"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="#FFFF55"
                android:text="ug/m3"
                android:textAlignment="center"
                android:textColor="#0000FF"
                android:textSize="20sp"
                android:textStyle="bold" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewC02"
                android:layout_width="98dp"
                android:layout_height="79dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#00AAFF"
                android:scaleType="fitXY"
                android:src="@drawable/co2" />

            <TextView
                android:id="@+id/co2"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#FFFFAA"
                android:text="CO2"
                android:textAlignment="center"
                android:textColor="#0000FF"
                android:textSize="55sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/co2unit"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="#FFFFAA"
                android:text="PPM"
                android:textAlignment="center"
                android:textColor="#0000FF"
                android:textSize="25sp"
                android:textStyle="bold" />



        </LinearLayout>




    </LinearLayout>



</android.support.constraint.ConstraintLayout>
